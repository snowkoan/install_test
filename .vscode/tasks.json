{
    "tasks": [
        {
            // Start code from a session of the VS Tools command prompt
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/Od",
                "/EHsc",
                "/Fd${workspaceFolder}\\${env:Platform}\\",
                "/Fo${workspaceFolder}\\${env:Platform}\\",
                "/Fe${workspaceFolder}\\${env:Platform}\\${workspaceFolderBasename}.exe",
                "${workspaceFolder}/*.cpp"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}