{
    "tasks": [
        {
            // Start code from a session of the VS Tools command prompt
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/O1", // Optimize for size
                "/GL", // Whole program optimization
                "/EHsc",
                "/MT", // statically linked C runtime
                "/sdl", // Extra security checks
                "/W4", 
                "/WX", // Treat warnings as errors
                "/Fd${workspaceFolder}\\${env:Platform}\\",
                "/Fo${workspaceFolder}\\${env:Platform}\\",
                "/Fe${workspaceFolder}\\${env:Platform}\\${workspaceFolderBasename}.exe",
                "${workspaceFolder}/*.cpp",
                "/link", // linker options start
                "/MANIFEST:EMBED",
                "/MANIFESTINPUT:app.manifest", 
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}